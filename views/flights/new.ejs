<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
    <label>Airline:</label>
    <select name="airline">
        <option>American</option>
        <option>Southwest</option>
        <option>United</option>
    </select>

    <label>Airport: </label>
    <select name="airport">
        <option>AUS</option>
        <option>DFW</option>
        <option>DEN</option>
        <option>LAX</option>
        <option>SAN</option>
    </select>
    
    <label>Flight No.: <span>(10 - 9999)</span></label>
    <input name="flightNo" type="number" min="10" max="9999">

    <label>Departure: </label>
    <input type="datetime-local" name="departs">
    
    <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>