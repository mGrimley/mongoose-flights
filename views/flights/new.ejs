<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline: <span>(American, Southwest, United)</span></label>
  <input type="text" name="airline">
  <label>Airport: <span>(AUS, DFW, DEN, LAX, SAN)</span></label>
  <input type="text" name="airport">
  <label>Flight No.: <span>(10 - 9999)</span></label>
  <input type="number" name="flightNo">
  <label>Departure: </label>
  <input type="datetime-local" name="departs" checked>
  <input type="submit" value="Add Flight">
</form>

